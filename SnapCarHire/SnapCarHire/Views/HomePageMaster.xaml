                                                        <On Platform="Android,Windows">
                                                            <OnIdiom
                                                            x:TypeArguments="x:Double"
                                                            Phone="18"
                                                            Tablet="22" />
                                                        </On>
                                                    </OnPlatform>
                                                </Label.FontSize>
                                            </Label>
                                        </Grid>
                                    </StackLayout>
                                </renders:ExtendedViewCell>
                            </DataTemplate>

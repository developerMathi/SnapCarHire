<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SnapCarHire.Views.SummaryOfChargesPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:input="clr-namespace:Plugin.InputKit.Shared.Controls;assembly=Plugin.InputKit"
    xmlns:local="clr-namespace:SnapCarHire.MarkupExtensions"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:renders="clr-namespace:SnapCarHire.Renders" xmlns:pancakeview="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    BackgroundColor="{AppThemeBinding Dark={StaticResource BlackColor}, Light={StaticResource BackGroundColor}}"
    mc:Ignorable="d">
    <!--<ContentPage.ToolbarItems>
        <ToolbarItem Text="Login"
                     Clicked="LoginIcon_Clicked"
                     x:Name="loginIcon"
                     ></ToolbarItem>
    </ContentPage.ToolbarItems>-->
    <ContentPage.Content>
        <Grid Margin="5,10,5,10"
              VerticalOptions="Fill">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0"
              HorizontalOptions="Fill">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="50" />
                </Grid.ColumnDefinitions>
                <Grid.HeightRequest>
                    <OnPlatform x:TypeArguments="x:Double">
                        <On Platform="iOS">
                            <OnIdiom
                                x:TypeArguments="x:Double"
                                Phone="50"
                                Tablet="60" />
                        </On>
                        <On Platform="Android,Windows">
                            <OnIdiom
                                x:TypeArguments="x:Double"
                                Phone="50"
                                Tablet="60" />
                        </On>
                    </OnPlatform>
                </Grid.HeightRequest>

                <ImageButton
                    x:Name="btnBack"
                    Margin="0"
                    Padding="0"
                    BackgroundColor="Transparent"
Clicked="btnBack_Clicked"
                    HeightRequest="30"
                    Source="{local:EmbeddedImage ResourceId=SnapCarHire.Assets.iconBack.png}"
                    VerticalOptions="CenterAndExpand" 
                Aspect="AspectFit"/>
            </Grid>
            <Grid Margin="0"
                  Grid.Row="1"
              Padding="0"
              HorizontalOptions="Fill">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ScrollView Grid.Row="0">
                    <Grid RowSpacing="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>


                        <Grid ColumnSpacing="10">
                            <Grid.Margin>
                                <OnPlatform x:TypeArguments="Thickness">
                                    <On Platform="iOS">
                                        <OnIdiom
                                x:TypeArguments="Thickness"
                                Phone="20,0,20,10"
                                Tablet="60,0,60,20" />
                                    </On>
                                    <On Platform="Android,Windows">
                                        <OnIdiom
                                x:TypeArguments="Thickness"
                                Phone="20,0,20,10"
                                Tablet="60,0,60,10" />
                                    </On>
                                </OnPlatform>
                            </Grid.Margin>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>



                            <StackLayout Margin="0" Padding="0" VerticalOptions="CenterAndExpand">
                                <Image Source="{local:EmbeddedImage ResourceId=SnapCarHire.Assets.iconSelectBookNow1.png}"
                               Aspect="AspectFit">
                                    <Image.WidthRequest>
                                        <OnPlatform x:TypeArguments="x:Double">
                                            <On Platform="iOS">
                                                <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="50"
                                        Tablet="60" />
                                            </On>
                                            <On Platform="Android,Windows">
                                                <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="50"
                                        Tablet="60" />
                                            </On>
                                        </OnPlatform>
                                    </Image.WidthRequest>
                                </Image>
                            </StackLayout>

                            <StackLayout  
                        Grid.Column="1"
                        HorizontalOptions="CenterAndExpand"
                        VerticalOptions="CenterAndExpand"
                        Orientation="Horizontal">
                                <BoxView
                        HeightRequest="8"
                            WidthRequest="8"
                            CornerRadius="8" 
                        Color="{AppThemeBinding Light={StaticResource PrimaryColor}, Dark={StaticResource AccentColor}}" />
                                <BoxView
                        HeightRequest="8"
                            WidthRequest="8"
                            CornerRadius="8" 
                        Color="{AppThemeBinding Light={StaticResource PrimaryColor}, Dark={StaticResource AccentColor}}" />
                            </StackLayout>


                            <StackLayout
                    Grid.Column="2"
                    Margin="0"
                    Padding="0"
                        VerticalOptions="CenterAndExpand">
                                <Image Source="{local:EmbeddedImage ResourceId=SnapCarHire.Assets.iconSelectBookNow2.png}">
                                    <Image.WidthRequest>
                                        <OnPlatform x:TypeArguments="x:Double">
                                            <On Platform="iOS">
                                                <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="50"
                                        Tablet="60" />
                                            </On>
                                            <On Platform="Android,Windows">
                                                <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="50"
                                        Tablet="60" />
                                            </On>
                                        </OnPlatform>
                                    </Image.WidthRequest>
                                </Image>
                            </StackLayout>
                            <StackLayout  
                        Grid.Column="3"
                        HorizontalOptions="CenterAndExpand"
                        VerticalOptions="CenterAndExpand"
                        Orientation="Horizontal">
                                <BoxView
                        HeightRequest="8"
                            WidthRequest="8"
                            CornerRadius="8" 
                        Color="{AppThemeBinding Light={StaticResource PrimaryColor}, Dark={StaticResource AccentColor}}" />
                                <BoxView
                        HeightRequest="8"
                            WidthRequest="8"
                            CornerRadius="8" 
                        Color="{AppThemeBinding Light={StaticResource PrimaryColor}, Dark={StaticResource AccentColor}}" />
                            </StackLayout>

                            <StackLayout
                    Grid.Column="4"
                    Margin="0"
                    Padding="0"
                        VerticalOptions="CenterAndExpand">
                                <Image Source="{local:EmbeddedImage ResourceId=SnapCarHire.Assets.iconSelectBookNow3.png}">
                                    <Image.WidthRequest>
                                        <OnPlatform x:TypeArguments="x:Double">
                                            <On Platform="iOS">
                                                <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="50"
                                        Tablet="60" />
                                            </On>
                                            <On Platform="Android,Windows">
                                                <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="50"
                                        Tablet="60" />
                                            </On>
                                        </OnPlatform>
                                    </Image.WidthRequest>
                                </Image>
                            </StackLayout>

                            <StackLayout  
                        Grid.Column="5"
                        HorizontalOptions="CenterAndExpand"
                        VerticalOptions="CenterAndExpand"
                        Orientation="Horizontal">
                                <BoxView
                        HeightRequest="8"
                            WidthRequest="8"
                            CornerRadius="8" 
                        Color="{AppThemeBinding Light={StaticResource PrimaryColor}, Dark={StaticResource AccentColor}}" />
                                <BoxView
                        HeightRequest="8"
                            WidthRequest="8"
                            CornerRadius="8" 
                        Color="{AppThemeBinding Light={StaticResource PrimaryColor}, Dark={StaticResource AccentColor}}" />
                            </StackLayout>
                            <StackLayout
                    Grid.Column="6"
                    Margin="0"
                    Padding="0"
                        VerticalOptions="CenterAndExpand">
                                <Image Source="{local:EmbeddedImage ResourceId=SnapCarHire.Assets.iconSelectBookNow4.png}">

                                    <Image.WidthRequest>
                                        <OnPlatform x:TypeArguments="x:Double">
                                            <On Platform="iOS">
                                                <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="65"
                                        Tablet="75" />
                                            </On>
                                            <On Platform="Android,Windows">
                                                <OnIdiom
                                        x:TypeArguments="x:Double"
                                       Phone="65"
                                        Tablet="75" />
                                            </On>
                                        </OnPlatform>
                                    </Image.WidthRequest>
                                    <Image.HeightRequest>
                                        <OnPlatform x:TypeArguments="x:Double">
                                            <On Platform="iOS">
                                                <OnIdiom
                                        x:TypeArguments="x:Double"
                                       Phone="65"
                                        Tablet="75" />
                                            </On>
                                            <On Platform="Android,Windows">
                                                <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="65"
                                        Tablet="75" />
                                            </On>
                                        </OnPlatform>
                                    </Image.HeightRequest>
                                </Image>
                            </StackLayout>
                        </Grid>
                        

                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />

                            </Grid.RowDefinitions>
                            <Label
                        Margin="0,0,0,5"
                        FontAttributes="Bold"
                        FontFamily="SourceSansPro-Bold"
                        HorizontalOptions="CenterAndExpand"
                        Text="BOOK NOW - SUMMARY"
                            TextColor="{AppThemeBinding Light={StaticResource PrimaryColor}, Dark={StaticResource AccentColor}}">
                                <Label.FontSize>
                                    <OnPlatform x:TypeArguments="x:Double">
                                        <On Platform="iOS">
                                            <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="20"
                                        Tablet="24" />
                                        </On>
                                        <On Platform="Android,Windows">
                                            <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="22"
                                        Tablet="26" />
                                        </On>
                                    </OnPlatform>
                                </Label.FontSize>
                            </Label>

                            <Grid 
                            Grid.Row="1"
                            Padding="-10,10,-10,-5"
                            ColumnSpacing="10"
                            VerticalOptions="CenterAndExpand"
                            BackgroundColor="{StaticResource PrimaryColor}">
                                <Grid.HeightRequest>
                                    <OnPlatform x:TypeArguments="x:Double">
                                        <On Platform="iOS">
                                            <OnIdiom
                                            x:TypeArguments="x:Double"
                                            Phone="50"
                                            Tablet="60" />
                                        </On>
                                        <On Platform="Android,Windows">
                                            <OnIdiom
                                            x:TypeArguments="x:Double"
                                            Phone="50"
                                            Tablet="60" />
                                        </On>
                                    </OnPlatform>
                                </Grid.HeightRequest>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <StackLayout
                                Margin="20,0,0,0"
                                Padding="0"
                                Orientation="Horizontal"
                                Spacing="10">

                                    <Image
                                    BackgroundColor="Transparent"
                                    HorizontalOptions="Center"
                                    Source="{local:EmbeddedImage ResourceId=SnapCarHire.Assets.iconEDate.png}"
                                    VerticalOptions="CenterAndExpand">
                                        <Image.HeightRequest>
                                            <OnPlatform x:TypeArguments="x:Double">
                                                <On Platform="iOS">
                                                    <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="17"
                                                    Tablet="22" />
                                                </On>
                                                <On Platform="Android,Windows">
                                                    <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="17"
                                                    Tablet="22" />
                                                </On>
                                            </OnPlatform>
                                        </Image.HeightRequest>
                                    </Image>

                                    <Label
                                    x:Name="startDateLabel"
                                    FontFamily="SourceSansPro-Black"
                                    TextColor="{AppThemeBinding Light={StaticResource BackGroundColor}, Dark={StaticResource BackGroundColor}}">
                                        <Label.FontSize>
                                            <OnPlatform x:TypeArguments="x:Double">
                                                <On Platform="iOS">
                                                    <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="12"
                                                    Tablet="16" />
                                                </On>
                                                <On Platform="Android,Windows">
                                                    <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="12"
                                                    Tablet="16" />
                                                </On>
                                            </OnPlatform>
                                        </Label.FontSize>
                                    </Label>
                                    <Label
                                    x:Name="startTimeLabel"
                                    FontFamily="SourceSansPro-Black"
                                    TextColor="{AppThemeBinding Light={StaticResource BackGroundColor}, Dark={StaticResource BackGroundColor}}">
                                        <Label.FontSize>
                                            <OnPlatform x:TypeArguments="x:Double">
                                                <On Platform="iOS">
                                                    <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="12"
                                                    Tablet="16" />
                                                </On>
                                                <On Platform="Android,Windows">
                                                    <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="12"
                                                    Tablet="16" />
                                                </On>
                                            </OnPlatform>
                                        </Label.FontSize>
                                    </Label>
                                </StackLayout>
                                <StackLayout
                                Grid.Row="1"
                                Margin="20,0,0,0"
                                Padding="0"
                                Orientation="Horizontal"
                                Spacing="10">

                                    <Image
                                    BackgroundColor="Transparent"
                                    HorizontalOptions="Center"
                                    Source="{local:EmbeddedImage ResourceId=SnapCarHire.Assets.iconAddress.png}"
                                    VerticalOptions="CenterAndExpand">
                                        <Image.HeightRequest>
                                            <OnPlatform x:TypeArguments="x:Double">
                                                <On Platform="iOS">
                                                    <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="17"
                                                    Tablet="22" />
                                                </On>
                                                <On Platform="Android,Windows">
                                                    <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="17"
                                                    Tablet="22" />
                                                </On>
                                            </OnPlatform>
                                        </Image.HeightRequest>
                                    </Image>
                                    <Label
                                    x:Name="startLoc"
                                    FontFamily="SourceSansPro-Black"
                                    TextColor="{AppThemeBinding Light={StaticResource BackGroundColor}, Dark={StaticResource BackGroundColor}}">
                                        Start Time :
                                        <Label.FontSize>
                                            <OnPlatform x:TypeArguments="x:Double">
                                                <On Platform="iOS">
                                                    <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="12"
                                                    Tablet="16" />
                                                </On>
                                                <On Platform="Android,Windows">
                                                    <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="12"
                                                    Tablet="16" />
                                                </On>
                                            </OnPlatform>
                                        </Label.FontSize>
                                    </Label>

                                </StackLayout>

                                <StackLayout
                                Grid.Column="1"
                                Margin="0,0,20,0"
                                Padding="0"
                                HorizontalOptions="EndAndExpand"
                                Orientation="Horizontal"
                                Spacing="10">
                                    <Label
                                    x:Name="endDateLabel"
                                    FontAttributes="Bold"
                                    FontFamily="SourceSansPro-Black"
                                    TextColor="{AppThemeBinding Light={StaticResource BackGroundColor}, Dark={StaticResource BackGroundColor}}">
                                        End Date :
                                        <Label.FontSize>
                                            <OnPlatform x:TypeArguments="x:Double">
                                                <On Platform="iOS">
                                                    <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="12"
                                                    Tablet="16" />
                                                </On>
                                                <On Platform="Android,Windows">
                                                    <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="12"
                                                    Tablet="16" />
                                                </On>
                                            </OnPlatform>
                                        </Label.FontSize>
                                    </Label>
                                    <Label
                                    x:Name="endTimeLabel"
                                    FontFamily="SourceSansPro-Black"
                                    FontSize="12"
                                    TextColor="{AppThemeBinding Light={StaticResource BackGroundColor}, Dark={StaticResource BackGroundColor}}">
                                        <Label.FontSize>
                                            <OnPlatform x:TypeArguments="x:Double">
                                                <On Platform="iOS">
                                                    <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="12"
                                                    Tablet="16" />
                                                </On>
                                                <On Platform="Android,Windows">
                                                    <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="12"
                                                    Tablet="16" />
                                                </On>
                                            </OnPlatform>
                                        </Label.FontSize>
                                    </Label>

                                    <Image
                                    BackgroundColor="Transparent"
                                    HorizontalOptions="Center"
                                    Source="{local:EmbeddedImage ResourceId=SnapCarHire.Assets.iconEDate.png}"
                                    VerticalOptions="CenterAndExpand">
                                        <Image.HeightRequest>
                                            <OnPlatform x:TypeArguments="x:Double">
                                                <On Platform="iOS">
                                                    <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="17"
                                                    Tablet="22" />
                                                </On>
                                                <On Platform="Android,Windows">
                                                    <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="17"
                                                    Tablet="22" />
                                                </On>
                                            </OnPlatform>
                                        </Image.HeightRequest>
                                    </Image>
                                </StackLayout>
                                <StackLayout
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="0,0,20,0"
                                Padding="0"
                                HorizontalOptions="End"
                                Orientation="Horizontal"
                                Spacing="10">
                                    <Label
                                    x:Name="endLoc"
                                    FontAttributes="Bold"
                                    FontFamily="SourceSansPro-Black"
                                    FontSize="12"
                                    TextColor="{AppThemeBinding Light={StaticResource BackGroundColor}, Dark={StaticResource BackGroundColor}}">
                                        End Time :
                                        <Label.FontSize>
                                            <OnPlatform x:TypeArguments="x:Double">
                                                <On Platform="iOS">
                                                    <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="12"
                                                    Tablet="16" />
                                                </On>
                                                <On Platform="Android,Windows">
                                                    <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="12"
                                                    Tablet="16" />
                                                </On>
                                            </OnPlatform>
                                        </Label.FontSize>
                                    </Label>


                                    <Image
                                    BackgroundColor="Transparent"
                                    HorizontalOptions="Center"
                                    Source="{local:EmbeddedImage ResourceId=SnapCarHire.Assets.iconAddress.png}"
                                    VerticalOptions="CenterAndExpand">
                                        <Image.HeightRequest>
                                            <OnPlatform x:TypeArguments="x:Double">
                                                <On Platform="iOS">
                                                    <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="17"
                                                    Tablet="22" />
                                                </On>
                                                <On Platform="Android,Windows">
                                                    <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="17"
                                                    Tablet="22" />
                                                </On>
                                            </OnPlatform>
                                        </Image.HeightRequest>
                                    </Image>
                                </StackLayout>



                            </Grid>
                            <Image
                            Grid.Row="1"

                                    BackgroundColor="Transparent"
                                    HorizontalOptions="Center"
                                    Source="rightArrWhite.png"
                                    VerticalOptions="CenterAndExpand"
                            >
                                <Image.HeightRequest>
                                    <OnPlatform x:TypeArguments="x:Double">
                                        <On Platform="iOS">
                                            <OnIdiom
                                            x:TypeArguments="x:Double"
                                            Phone="50"
                                            Tablet="60" />
                                        </On>
                                        <On Platform="Android,Windows">
                                            <OnIdiom
                                            x:TypeArguments="x:Double"
                                            Phone="50"
                                            Tablet="60" />
                                        </On>
                                    </OnPlatform>
                                </Image.HeightRequest>
                            </Image>

                            <pancakeview:PancakeView
                                BackgroundColor="{StaticResource LightGrayColor}"
                                Border="{pancakeview:BorderMarkup Color=White, Thickness=1}"
                        Grid.Row="2"
                        Padding="5,0" 
                        CornerRadius="10"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand">
                                <pancakeview:PancakeView.Margin>
                                    <OnPlatform x:TypeArguments="Thickness">
                                        <On Platform="iOS">
                                            <OnIdiom
                                        x:TypeArguments="Thickness"
                                        Phone="5,10,5,10"
                                        Tablet="25,20,25,20" />
                                        </On>
                                        <On Platform="Android,Windows">
                                            <OnIdiom
                                        x:TypeArguments="Thickness"
                                        Phone="5,10,5,10"
                                        Tablet="25,20,25,20" />
                                        </On>
                                    </OnPlatform>
                                </pancakeview:PancakeView.Margin>
                                <pancakeview:PancakeView.HeightRequest>
                                    <OnPlatform x:TypeArguments="x:Double">
                                        <On Platform="iOS">
                                            <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="120"
                                        Tablet="150" />
                                        </On>
                                        <On Platform="Android,Windows">
                                            <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="120"
                                        Tablet="150" />
                                        </On>
                                    </OnPlatform>
                                </pancakeview:PancakeView.HeightRequest>
                                <pancakeview:PancakeView.Shadow>
                                    <pancakeview:DropShadow Color="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource BackGroundColor}}" Offset="20,20"/>
                                </pancakeview:PancakeView.Shadow>
                                <Grid
                            Margin="0"
                            ColumnSpacing="10"
                            RowSpacing="0"
                            VerticalOptions="FillAndExpand"
                                    Padding="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="130" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <Image
                                        x:Name='VehImageFill'
                                Grid.Row="0"
                                Grid.RowSpan="3"
                                        Grid.ColumnSpan="2"
                                Source="{local:EmbeddedImage ResourceId=SnapCarHire.Assets.CarSample.jpg}"
                                        Aspect="AspectFill"
                                        Margin="150,0,-150,0"
                                        Opacity="0.05"/>

                                    <Image
                                x:Name="vehilcleTypeImage"
                                Grid.Row="0"
                                Grid.RowSpan="3"
                                Source="{local:EmbeddedImage ResourceId=SnapCarHire.Assets.CarSample.jpg}"
                                        Aspect="AspectFit"
                                        Margin="1"
                                        />



                                    <Label
                                x:Name="vehicleSampleLabel"
                                Grid.Column="1"
                                Margin="0,10,0,5"
                                FontAttributes="Bold"
                                FontFamily="SourceSansPro-Bold"
                                TextColor="{AppThemeBinding Dark={StaticResource BlackColor}, Light={StaticResource BlackColor}}" 
                                        VerticalOptions="Center">
                                        vehicle Sample Label
                                        <Label.FontSize>
                                            <OnPlatform x:TypeArguments="x:Double">
                                                <On Platform="iOS">
                                                    <OnIdiom
                                                x:TypeArguments="x:Double"
                                                Phone="16"
                                                Tablet="20" />
                                                </On>
                                                <On Platform="Android,Windows">
                                                    <OnIdiom
                                                x:TypeArguments="x:Double"
                                                Phone="18"
                                                Tablet="22" />
                                                </On>
                                            </OnPlatform>
                                        </Label.FontSize>
                                    </Label>
                                    <Label
                                x:Name="vehilcleTypeLabel"
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="0,0,0,5"
                                FontFamily="SourceSansPro-Regular"
                                TextColor="{AppThemeBinding Dark={StaticResource BlackColor}, Light={StaticResource BlackColor}}" 
                                        VerticalOptions="Center">
                                        <Label.FontSize>
                                            <OnPlatform x:TypeArguments="x:Double">
                                                <On Platform="iOS">
                                                    <OnIdiom
                                                x:TypeArguments="x:Double"
                                                Phone="16"
                                                Tablet="20" />
                                                </On>
                                                <On Platform="Android,Windows">
                                                    <OnIdiom
                                                x:TypeArguments="x:Double"
                                                Phone="18"
                                                Tablet="22" />
                                                </On>
                                            </OnPlatform>
                                        </Label.FontSize>
                                    </Label>
                                    <StackLayout
                                Grid.Row="2"
                                Grid.Column="1"
                                Orientation="Horizontal"
                                Spacing="0"
                                VerticalOptions="CenterAndExpand"
                                        Margin="0,0,10,10">
                                        <Label
                                    x:Name="priceLabel"
                                    Margin="0"
                                    FontAttributes="Bold"
                                    FontFamily="SourceSansPro-Regular"
                                    TextColor="{StaticResource PrimaryColor}">
                                            <Label.FontSize>
                                                <OnPlatform x:TypeArguments="x:Double">
                                                    <On Platform="iOS">
                                                        <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="16"
                                                    Tablet="20" />
                                                    </On>
                                                    <On Platform="Android,Windows">
                                                        <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="18"
                                                    Tablet="22" />
                                                    </On>
                                                </OnPlatform>
                                            </Label.FontSize>
                                        </Label>

